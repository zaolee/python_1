def make_juice_1(add_friut):
    return f"{add_friut} + cup"

def make_juice_2(add_ice):
    return f"{add_ice} + ice" 

def make_juice_3(add_sugar):
    return f"{add_sugar} + sugar"  

add_ice = make_juice_1("apple")
add_sugar = make_juice_2(add_ice)
perfect_juice = make_juice_3(add_sugar)

print(perfect_juice)




